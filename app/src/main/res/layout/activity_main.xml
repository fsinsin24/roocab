<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:src="@drawable/bacoor" />
    </LinearLayout>

    <TextView
        android:layout_width="269dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:text="Welcome to
         Bacoor Connect!"
        android:textColor="#2B3381"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputEmail"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="467dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="193dp"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:background="@drawable/graybox"
        android:textColor="@color/black"
        app:boxBackgroundMode="outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputPassword"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="538dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="122dp"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:background="@drawable/graybox"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:backgroundTint="#2B3381"
        android:text="LOG IN"
        android:background="@drawable/rectanglebtn"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="593dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="659dp"
        android:text="Don't have an account yet? Register here"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>
